{
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "name": "bfarmx-retailer",
  "version": "2.2.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "refine build && rimraf .next/cache",
    "check": "biome check .",
    "check-types": "tsc --noEmit --pretty",
    "check:fix": "biome check --apply .",
    "clean": "rimraf .next out coverage",
    "commit": "cz",
    "dev": "refine dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "start": "refine start"
  },
  "dependencies": {
    "@refinedev/cli": "2.16.44",
    "@refinedev/core": "4.57.7",
    "@refinedev/nextjs-router": "6.2.1",
    "@refinedev/react-table": "5.6.15",
    "@refinedev/simple-rest": "5.0.10",
    "@tanstack/react-table": "8.21.2",
    "classnames": "2.5.1",
    "dayjs": "1.11.13",
    "js-confetti": "0.12.0",
    "next": "15.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@eslint-react/eslint-plugin": "^1.37.3",
    "@netlify/plugin-nextjs": "5.10.1",
    "@next/eslint-plugin-next": "^15.2.0",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/node": "22.13.12",
    "@types/react": "19.0.12",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "eslint": "9.23.0",
    "eslint-config-next": "15.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-refresh": "^0.4.19",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "8.5.3",
    "rimraf": "6.0.1",
    "tailwindcss": "^4.0.15",
    "typescript": "5.8.2"
  }
}
